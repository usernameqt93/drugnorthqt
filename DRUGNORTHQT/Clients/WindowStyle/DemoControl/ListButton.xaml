		<Button Command="{Binding ExportCommand}"
				Content="LinkButtonStyle"
				Cursor="Hand"
				Template="{StaticResource LinkButtonTemplate}"
				Style="{StaticResource LinkButtonStyle}"/>

		<Slider x:Name="sliderPercent"
				Value="70"
				IsSnapToTickEnabled="True"
				TickFrequency="1"
				Width="100"
				Minimum="60"
				Maximum="100"
				ToolTip="{Binding ElementName=sliderPercent,Path=Value}" />

