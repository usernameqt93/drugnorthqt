		<ResourceDictionary Source="pack://application:,,,/QT.Framework.Styles.Library;Component/QTStyle.xaml" />
	  </ResourceDictionary.MergedDictionaries>
	  <help:Boolean2VisibilityConverter x:Key="Boolean2Visibility" />
	</ResourceDictionary>
  </Window.Resources>

